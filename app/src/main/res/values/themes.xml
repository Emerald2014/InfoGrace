<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InfoGrace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#59bd87</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="tabStyle">@style/tabsLayout</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/app_background</item>
        <item name="switchStyle">@style/switchStyle</item>
    </style>
    
    <style name="tabsLayout" parent="Widget.MaterialComponents.TabLayout">
<!--        <item name="background">@color/app_background</item>-->


    </style>

    <style name="switchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/white</item>

    </style>
</resources>