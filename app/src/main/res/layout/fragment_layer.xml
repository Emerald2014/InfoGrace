<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layerFragmentRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".LayerFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/testClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Проверка"
        android:textColor="@color/purple_500"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/side_menu_l"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewLayer" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLayerTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ED3110"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testClick" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/side_menu_l"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/side_menu_l"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="246dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/menu_bottom"
            tools:menu="@menu/menu_bottom" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginEnd="68dp"
            android:src="@drawable/ic_baseline_drag_handle_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderAll"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:stepSize="1"
            android:valueFrom="0.0"
            android:valueTo="2.0"
            app:labelBehavior="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:thumbRadius="10dp"
            app:trackHeight="14dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


